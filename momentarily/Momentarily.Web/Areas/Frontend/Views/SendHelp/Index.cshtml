                        <div class="col-sm-12">
                            @using (Html.BeginForm("Index", "sendhelp", FormMethod.Post, new { @class = "ng-pristine ng-valid" }))
                            {
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Your Name</label>
                                            @Html.TextBoxFor(m => m.ViewModel.Name, new { @class = "form-control account-input" })
                                            @Html.ValidationMessageFor(m => m.ViewModel.Name, null, new { @class = "error-labels" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Your Email Address</label>
                                            @Html.TextBoxFor(m => m.ViewModel.EmailAddress, new { @class = "form-control account-input" })
                                            @Html.ValidationMessageFor(m => m.ViewModel.EmailAddress, null, new { @class = "error-labels" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Subject</label>
                                            @Html.TextBoxFor(m => m.ViewModel.Subject, new { @class = "form-control account-input" })
                                            @Html.ValidationMessageFor(m => m.ViewModel.Subject, null, new { @class = "error-labels" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Issues you are facing</label>
                                            @Html.DropDownList("ViewModel.Issuesfacing", new List<SelectListItem>()
                                                 {
                                                     new SelectListItem(){ Text= "Sign Up", Value = "Sign Up"},
                                                     new SelectListItem(){ Text= "Login", Value = "Login"},
                                                     new SelectListItem(){ Text= "Profile", Value = "Profile"},
                                                     new SelectListItem(){ Text= "Sharing", Value = "Sharing"},
                                                     new SelectListItem(){ Text= "Borrowing", Value = "Borrowing"},
                                                     new SelectListItem(){ Text= "Payments", Value = "Payments"},
                                                      new SelectListItem(){ Text= "Other", Value = "Other"}
                                                 }, "Select issues you are facing", new { @class = "form-control account-input" })
                                            @Html.ValidationMessageFor(m => m.ViewModel.Issuesfacing, null, new { @class = "error-labels" })
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>How can we help? Talk to us.</label>
                                            @Html.TextAreaFor(m => m.ViewModel.Message, new { @class = "form-control account-input", rows = 5 })
                                            @Html.ValidationMessageFor(m => m.ViewModel.Message, null, new { @class = "error-labels" })
                                        </div>
                                    </div>
                                    <div class="col-md-12 btnAlingnment">
                                        @Html.Captcha(5)
                                        <br /> <p style="color: #A63232"> @ViewBag.ErrorMessage </p> <p>
                                            <button class="btn btn-green helpBtn" type="submit">Send</button>
                                        </p>

                                        <div class="form-group">
                                        </div>
                                    </div>
                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




