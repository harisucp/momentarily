@model Apeek.Common.IShape<Apeek.ViewModels.Models.UserEmailModel>

@{
    Layout = "~/Areas/Frontend/Views/Shared/_AccountMenuLayout.cshtml";
}


<div class="content">
    <div class="container account">
        <div class="row">
            <div class="col-md-9 col-md-offset-3">
                <div class="profile-page">
                    <div class="account-sub-menu separated-block">
                        <div class="account-sub-menu-items col-md-3"><a href="@QuickUrl.UserProfileUrl()">My profile</a></div>
                        <div class="account-sub-menu-items active col-md-3"><a href="@QuickUrl.UserEmailUrl()">Change email</a></div>
                        <div class="account-sub-menu-items col-md-3"><a href="@QuickUrl.UserPwdUrl()">Change password</a></div>
                        <div class="account-sub-menu-items col-md-3"><a href="@Url.Action("BankInfo","User")">Payment Details</a></div>
                    </div>
                    <div class="title-block separated-block">
                        <h1 class="left-align">
                            Change email
                        </h1>
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.Partial("_Errors", Model)
                        <div class="form-block col-md-5">
                            <form>
                                <input type="hidden" name="ViewModel.OldUserEmail" id="EntityId" value="@Shape.ViewModel.OldUserEmail" />
                                <div class="form-group">
                                    <label>Email</label>
                                    @Html.TextBoxFor(m => m.ViewModel.UserEmail, new { @class = "form-control account-input" })
                                    @Html.ValidationMessageFor(m => m.ViewModel.UserEmail, null, new { @class = "error-labels" })
                                </div>
                                <button type="submit" class="btn btn-green">Save</button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
