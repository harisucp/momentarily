<script>

        $(document).on('click', '#becomeBorrower', function () {                $.ajax({            url: "/Search/CheckVersion",            type: "Get",            success: function (data) {                if (data != "True") {                    $('#exampleModalBeta').modal('show');                }                else {                    window.location.href = '/Search/Map';                }            },            error: function () {                toastr.info("Error Occurred");            }        })    });
    $(document).ready(function () {

        //$('#pintrest').click(function () {
        //    window.open('https://www.pinterest.com/momentarilycom/', '_blank');
        //})

        $(window).scroll(function () {
            if ($(this).scrollTop() > 100) {
                $('#scroll').fadeIn();
            } else {
                $('#scroll').fadeOut();
            }
        });
        $('#scroll').click(function () {
            $("html, body").animate({ scrollTop: 0 }, 600);
            return false;
        });
    });
    $("#btn_subscribe").click(function () {

        var email = $("#subscribeEmail").val();
        if (email == undefined || email == '') {
            $("#subscribeEmail").focus();
            $("#subscribe_msg_error2").css("display", "block");
            $("#subscribe_msg_error").css("display", "none");
            return;
        }
        else if (!ValidateEmail(email)) {
            $("#subscribeEmail").focus();
            $("#subscribe_msg_error2").css("display", "none");
            $("#subscribe_msg_error").css("display", "block");
            return;
        }
        else {
            $('#divLoading').show();
            $.ajax({
                url: "/Account/Subscribe",
                type: "Post",
                dataType: "json",
                data: { Email: email },
                success: function (data) {
                    if (data == "Subscribed") {
                        toastr.success(data);
                        $("#subscribeEmail").val('');
                        $("#subscribe_msg_error2").css("display", "none");
                        $("#subscribe_msg_error").css("display", "none");
                        $('#divLoading').hide();
                    }
                    else {
                        toastr.info(data);
                        $("#subscribeEmail").val('');
                        $("#subscribe_msg_error2").css("display", "none");
                        $("#subscribe_msg_error").css("display", "none");
                        $('#divLoading').hide();
                    }
                },
                error: function () {
                    toastr.info("Error Occurred");
                    $('#divLoading').hide();
                }
            })
        }

    });
    function ValidateEmail(email) {
        var expr = /^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
        return expr.test(email);
    };

</script>
