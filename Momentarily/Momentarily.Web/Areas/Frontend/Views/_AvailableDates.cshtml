@model Apeek.Common.IShapeResult

@if (!string.IsNullOrWhiteSpace(Model.Message))
{
    <div class="alerts">
        @if (!Model.IsError)
        {
            <div class="alert-success">@Model.Message</div>
        }
        else
        {
            <div class="alert-error">Invalid payment details. Please check your details again.</div>
        }
    </div>
}

