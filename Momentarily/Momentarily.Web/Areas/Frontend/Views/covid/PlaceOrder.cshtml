        //var total = amount + taxamount;
        //$('#TotalPrice').val(Math.round(total).toFixed(2));
        calculateTotalPrice();
    }
    function calculateOnSubmit() {
        
        var count = "0";
        var itemId = $('#CovidGoodId').val();
        $.ajax({
            url: "/AdminDashboard/GetAvailableCovidItemCount",
            type: "Get",
            async: false,
            data: { Id: itemId },
            success: function (data) {

                count = data;
            },
