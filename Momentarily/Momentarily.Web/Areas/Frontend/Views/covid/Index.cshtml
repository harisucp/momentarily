@model IEnumerable<Momentarily.ViewModels.Models.CovidGoodViewModel>
@{

    Layout = "~/Areas/Frontend/Views/Shared/_LayoutNew.cshtml";
    ViewBag.Title = "Covid";
}
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" rel="stylesheet">
<script src="~/Content/TemplateImg/js/jquery.min.js"></script>
<script src="~/Content/TemplateImg/js/bootstrap.min.js"></script>

<section class="mainDiv">
    <div class="covidBanner">
        <img src="~/Content/covid-image/covid-19-banner.jpg" alt="image" class="img-responsive" />
        <div class="covidBannerExt desktopHide">
            <div class="container">
                <div class="covidBannerContentPart">
                    <h3>Covid-19</h3>
                    <h1>Let's Give Back</h1>
                </div>
            </div>
        </div>
        <div class="covidBannerExt">
            <div class="container">
                <div class="covidBannerContentPart">
                    <h3 class="mobileHide">Covid-19</h3>
                    <h1 class="mobileHide">Let's Give Back</h1>
                    <p>We all want to do our part to prevent the spread of the coronavirus, and that means to stay at home and practice social distancing as much as possible.  In case we do need to go out, there are supplies below. For every pair of masks purchased, we will donate two masks and a hand sanitizer to our local heroes in America tagged on our Instagram and Facebook posts.  These can be first responders, delivery people, grocery store workers, volunteers, or anyone that has been deemed essential during our stay at home orders. In order to nominate individuals, make sure a picture is posted of them helping out, and be sure to tag momentarily.</p>
                    <h6>The masks are a reminder: this is only momentarily.</h6>
                </div>
            </div>
        </div>
    </div>
</section>



<section class="fetauredProduct">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="featureheading">
                    <h2>COVID-19 Products</h2>
                </div>
            </div>
        </div>
        <div class="row waterMark covidProduct">
            @foreach (var item in Model)
            {
                <div class="col-sm-6">
                    @if (item.stockMasterDetail.QuantityLeft <= 0)
                    {
                        <div class="featureDesc stockOutImage" onclick="PlaceOrder(@item.CovidGoodId)">
                            <div class="featureImage">
                                <a href="javascript:void(0);" title="Product Image">
                                    <img src="~/Content/covid-image/@item.GoodImage" alt="image" class="img-responisve">
                                </a>
                                <img class="stockImage" src="~/Content/covid-image/out-of-stock.png" alt="image">
                            </div>
                            <div class="covidProductPrice">
                                <a href="/covid/PlaceOrder/@item.CovidGoodId" title="@item.GoodName">
                                    <h3>@item.GoodName</h3>
                                </a>
                                <p class="ng-binding">$ @item.GoodPrice.ToString("F2") </p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="featureDesc" onclick="PlaceOrder(@item.CovidGoodId)">
                            <div class="featureImage">
                                <a href="javascript:void(0);" title="Product Image">
                                    <img src="~/Content/covid-image/@item.GoodImage" alt="image" class="img-responisve">
                                </a>
                            </div>
                            <div class="covidProductPrice">
                                <a href="/covid/PlaceOrder/@item.CovidGoodId" title="@item.GoodName">
                                    <h3>@item.GoodName</h3>
                                </a>
                                <p class="ng-binding">$ @item.GoodPrice.ToString("F2") (Only @item.stockMasterDetail.QuantityLeft left) </p>
                            </div>
                        </div>
                    }
                </div>
            }

        </div>
    </div>
</section>


<div class="modal fade covidPopup" tabindex="-1" role="dialog" id="covidpopup" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h3>Covid-19</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <div class="body-message">
                    <h5>We support our heroes during these rough times. Please read how your purchases will help go towards those essential workers and volunteers in our local communities.</h5>
                </div>
            </div>


            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>
            </div>

        </div>

    </div>

</div>


