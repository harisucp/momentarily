@*@model Apeek.Common.IShape<Apeek.ViewModels.Models.Impl.UserListing>*@
@model Apeek.ViewModels.Models.Impl.UserListing

@{
    Layout = "~/Areas/Frontend/Views/Shared/_AdminDashboardLayoutNew.cshtml";
}

@using (Html.BeginForm("TotalBorrowersList", "AdminDashboard", FormMethod.Post, new { @class = "TotalBorrowersList_dashboard" }))
{
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <div class="d-inline">
                        <h4>Total Borrowers List</h4>

                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title parentModulesInner">
                        <li class="breadcrumb-item">
                            <a href="/AdminDashboard/"> <i class="feather icon-home"></i> </a>
                        </li>
                        <li class="breadcrumb-item"><a href="#!">Borrowers List</a> </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Total Borrowers List</h5>

                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                @*<li><i class="feather icon-maximize full-card"></i></li>*@
                                <li><i class="feather icon-minus minimize-card"></i></li>
                                @*<li><i class="feather icon-trash-2 close-card"></i></li>*@
                            </ul>
                        </div>
                    </div>
                    <div class="card-block">
                        <div class="row">
                            <div class="table-responsive">
                                <table id="userslist" class="table table-bordered table-striped usertable">
                                    <thead>
                                        <tr>

                                            <th>User Id</th>
                                            <th>User Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int count = 1; }
                                        @for (int i = 0; i < Model.users.Count(); i++)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.HiddenFor(m => m.users[i].Id)
                                                    @Html.DisplayFor(m => m.users[i].Id)
                                                </td>
                                                <td>@Html.DisplayFor(m => m.users[i].FullName)</td>

                                            </tr>
                                            count++;
                                        }

                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<link href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script src="~/plugins/jquery/jquery.js"></script>
<script src="~/plugins/datatables/jquery.dataTables.js"></script>
<script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
