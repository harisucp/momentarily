@model Apeek.ViewModels.Models.Impl.MostRentedItems
@{
    Layout = "~/Areas/Frontend/Views/Shared/_AdminDashboardLayoutNew.cshtml";
    var dt = Model;
}
@using (Html.BeginForm("MostRentedItems", "AdminDashboard", FormMethod.Post, new { id = "MostRentedItems_Id" }))
{
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <div class="d-inline">
                        <h4>Top 5 Rented Items</h4>

                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title parentModulesInner">
                        <li class="breadcrumb-item">
                            <a href="/AdminDashboard/"> <i class="feather icon-home"></i> </a>
                        </li>
                        <li class="breadcrumb-item"><a href="#!">Most Rented Items</a> </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Most Rented Items</h5>

                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                @*<li><i class="feather icon-maximize full-card"></i></li>*@
                                <li><i class="feather icon-minus minimize-card"></i></li>
                                @*<li><i class="feather icon-trash-2 close-card"></i></li>*@
                            </ul>
                        </div>
                    </div>
                    <div class="card-block">
                        <div class="dashBoardTable">
                            <div class="table-responsive">
                                <table id="itemslist" class="table table-bordered table-striped itemstable">
                                    <thead>
                                        <tr>
                                            <th>Sr.No</th>
                                            <th>Product Id</th>
                                            <th>Name</th>
                                            <th>Count</th>


                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int count = 1; }
                                        @for (int i = 0; i < Model.mostRentedItems.Count(); i++)
                                        {
                                        <tr>
                                            <td>
                                                @count
                                            </td>
                                            <td>
                                                <a href="/Search/Item/@Model.mostRentedItems[i].Id" target="_blank" title="@Model.mostRentedItems[i].ItemName">@Model.mostRentedItems[i].Id</a>
                                            </td>
                                            <td>
                                                <a href="/Search/Item/@Model.mostRentedItems[i].Id" target="_blank" title="@Model.mostRentedItems[i].ItemName">@Model.mostRentedItems[i].ItemName</a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(m => m.mostRentedItems[i].Count)
                                            </td>
                                        </tr>
                                            count++;
                                        }

                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<link href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script src="~/plugins/jquery/jquery.js"></script>
<script src="~/plugins/datatables/jquery.dataTables.js"></script>
<script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
<script>
    $(document).ready(function () {
        $('#itemslist').DataTable({
            //"paging": true,
            //"lengthChange": false,
            //"searching": false,
            //"ordering": true,
            //"info": true,
            //"autoWidth": false,
        });
    });
</script>
